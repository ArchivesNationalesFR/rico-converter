      <rdfs:label xml:lang="fr">Loménie de Brienne (famille de)</rdfs:label>
      <RiC:thingIsSourceOfRelationToAppellation rdf:resource="http://data.archives-nationales.culture.gouv.fr/relationToAppellation/050058_d3691e61"/>
