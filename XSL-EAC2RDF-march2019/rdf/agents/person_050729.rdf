      <rdfs:label xml:lang="fr">Martin, Pierre (1912-1998)</rdfs:label>
      <RiC:thingIsSourceOfRelationToAppellation rdf:resource="http://data.archives-nationales.culture.gouv.fr/relationToAppellation/050729_d4205e65"/>
