      <rdfs:label xml:lang="fr">Mercier, Pierre (1880-1965)</rdfs:label>
      <RiC:thingIsSourceOfRelationToAppellation rdf:resource="http://data.archives-nationales.culture.gouv.fr/relationToAppellation/050858_d4285e41"/>
