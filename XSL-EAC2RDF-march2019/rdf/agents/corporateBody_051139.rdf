   <rdf:Description rdf:about="http://data.archives-nationales.culture.gouv.fr/corporateBody/051139">
      <rdf:type rdf:resource="http://www.ica.org/standards/RiC/ontology#CorporateBody"/>
      <rdfs:label xml:lang="fr">Centre national du cinéma et de l'image animée. Direction de la communication (1991-....)</rdfs:label>
      <RiC:thingIsSourceOfRelationToAppellation rdf:resource="http://data.archives-nationales.culture.gouv.fr/relationToAppellation/051139_d4443e36"/>
