      <rdfs:label xml:lang="fr">France. Inspection du travail (1841-....)</rdfs:label>
      <RiC:thingIsSourceOfRelationToAppellation rdf:resource="http://data.archives-nationales.culture.gouv.fr/relationToAppellation/051261_d4547e45"/>
