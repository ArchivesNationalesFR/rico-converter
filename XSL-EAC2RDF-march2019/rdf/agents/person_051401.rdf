   <rdf:Description rdf:about="http://data.archives-nationales.culture.gouv.fr/person/051401">
      <rdf:type rdf:resource="http://www.ica.org/standards/RiC/ontology#Person"/>
      <rdfs:label xml:lang="fr">Saunier-Seïté, Alice (1925-2003)</rdfs:label>
      <RiC:thingIsSourceOfRelationToAppellation rdf:resource="http://data.archives-nationales.culture.gouv.fr/relationToAppellation/051401_d4655e43"/>
