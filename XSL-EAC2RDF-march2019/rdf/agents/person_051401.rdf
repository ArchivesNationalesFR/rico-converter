      <RiC:deathDate rdf:datatype="http://www.w3.org/2001/XMLSchema#date">2003-08-05</RiC:deathDate>
      <RiC:personIsSourceOfOccupationRelation rdf:resource="http://data.archives-nationales.culture.gouv.fr/occupationRelation/051401-d4653e105"/>
