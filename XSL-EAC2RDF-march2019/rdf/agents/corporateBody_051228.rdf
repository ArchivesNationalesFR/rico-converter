   <rdf:Description rdf:about="http://data.archives-nationales.culture.gouv.fr/corporateBody/051228">
      <rdf:type rdf:resource="http://www.ica.org/standards/RiC/ontology#CorporateBody"/>
      <rdfs:label xml:lang="fr">France. Direction du service des prisonniers de guerre (1940-1944)</rdfs:label>
      <RiC:thingIsSourceOfRelationToAppellation rdf:resource="http://data.archives-nationales.culture.gouv.fr/relationToAppellation/051228_d4519e41"/>
