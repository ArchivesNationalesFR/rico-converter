      <rdfs:label xml:lang="fr">Wallon (famille) (XIXe-XXe siècles)</rdfs:label>
      <RiC:thingIsSourceOfRelationToAppellation rdf:resource="http://data.archives-nationales.culture.gouv.fr/relationToAppellation/050669_d4161e34"/>
