   <rdf:Description rdf:about="http://data.archives-nationales.culture.gouv.fr/corporateBody/000033">
      <rdf:type rdf:resource="http://www.ica.org/standards/RiC/ontology#CorporateBody"/>
      <rdfs:label xml:lang="fr">France. Commission nationale de contrôle de la campagne en vue de l’élection du président de la République (1964-....)</rdfs:label>
      <RiC:thingIsSourceOfRelationToAppellation rdf:resource="http://data.archives-nationales.culture.gouv.fr/relationToAppellation/000033_d7e88"/>
      <RiC:thingIsSourceOfRelationToAppellation rdf:resource="http://data.archives-nationales.culture.gouv.fr/relationToAppellation/000033_d7e91"/>
