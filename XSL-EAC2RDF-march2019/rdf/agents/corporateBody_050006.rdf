      <rdfs:label xml:lang="fr">État-major particulier du président de la République</rdfs:label>
      <RiC:thingIsSourceOfRelationToAppellation rdf:resource="http://data.archives-nationales.culture.gouv.fr/relationToAppellation/050006_d3656e47"/>
